{% extends 'admin/base.html.twig' %}

{% block title %}Manage Reservations - Admin{% endblock %}

{% block admin_content %}
    <h1 class="admin-page-title"><i class="bi bi-calendar-check me-2"></i>Manage Reservations</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card admin-card mb-3">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="{{ path('app_admin_reservations') }}" class="btn btn-outline-primary {% if filter == 'all' %}active{% endif %}">
                    All Reservations
                </a>
                <a href="{{ path('app_admin_reservations', {filter: 'upcoming'}) }}" class="btn btn-outline-success {% if filter == 'upcoming' %}active{% endif %}">
                    Upcoming Only
                </a>
            </div>
        </div>
    </div>

    <div class="card admin-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Date & Time</th>
                            <th>Guests</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                        <tr>
                            <td><strong>#{{ reservation.id }}</strong></td>
                            <td>{{ reservation.user.firstName }} {{ reservation.user.lastName }}</td>
                            <td>
                                <i class="bi bi-calendar me-1 text-primary"></i>{{ reservation.reservationDate|date('M d, Y') }}
                                <br>
                                <small class="text-muted"><i class="bi bi-clock me-1"></i>{{ reservation.reservationDate|date('H:i') }}</small>
                            </td>
                            <td><i class="bi bi-people me-1"></i>{{ reservation.numberOfGuests }} guests</td>
                            <td>
                                <span class="badge badge-status-{{ reservation.status }}">
                                    {{ reservation.status|capitalize }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_reservation_show', {id: reservation.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_reservation_delete', {id: reservation.id}) }}" class="d-inline-form">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                                No reservations found.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <small class="text-muted">Total reservations: {{ reservations|length }}</small>
    </div>
{% endblock %}

