{% extends 'admin/base.html.twig' %}

{% block title %}User Details - Admin{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="admin-page-title"><i class="bi bi-person-circle me-2"></i>User Details</h1>
        <a href="{{ path('app_admin_users') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card admin-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>User Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ user.id }}</p>
                    <p><strong>Name:</strong><br>{{ user.firstName }} {{ user.lastName }}</p>
                    <p><strong>Email:</strong><br>{{ user.email }}</p>
                    {% if user.phone %}
                        <p><strong>Phone:</strong><br>{{ user.phone }}</p>
                    {% endif %}
                    {% if user.address %}
                        <p><strong>Address:</strong><br>{{ user.address }}</p>
                    {% endif %}
                    <p><strong>Role:</strong><br>
                        {% if user.isAdmin() %}
                            <span class="badge badge-danger-gradient">
                                <i class="bi bi-shield-check"></i> ADMIN
                            </span>
                        {% else %}
                            <span class="badge badge-primary-gradient">USER</span>
                        {% endif %}
                    </p>
                    <p><strong>Joined:</strong><br>{{ user.createdAt|date('F d, Y') }}</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card admin-card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-cart-check me-2"></i>Orders ({{ user.orders|length }})</h5>
                </div>
                <div class="card-body p-0">
                    {% if user.orders|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in user.orders %}
                                    <tr>
                                        <td><a href="{{ path('app_admin_order_show', {id: order.id}) }}" class="text-primary">#{{ order.id }}</a></td>
                                        <td>{{ order.createdAt|date('M d, Y') }}</td>
                                        <td><strong class="text-primary">{{ order.totalAmount|number_format(0) }} DT</strong></td>
                                        <td><span class="badge badge-status-{{ order.status }}">{{ order.status|capitalize }}</span></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            No orders yet.
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card admin-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Reservations ({{ user.reservations|length }})</h5>
                </div>
                <div class="card-body p-0">
                    {% if user.reservations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date & Time</th>
                                        <th>Guests</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservation in user.reservations %}
                                    <tr>
                                        <td><a href="{{ path('app_admin_reservation_show', {id: reservation.id}) }}" class="text-primary">#{{ reservation.id }}</a></td>
                                        <td>{{ reservation.reservationDate|date('M d, Y H:i') }}</td>
                                        <td>{{ reservation.numberOfGuests }} guests</td>
                                        <td><span class="badge badge-status-{{ reservation.status }}">{{ reservation.status|capitalize }}</span></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                            No reservations yet.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

