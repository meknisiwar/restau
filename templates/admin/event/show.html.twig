{% extends 'base.html.twig' %}

{% block title %}Admin - {{ event.title }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ event.title }}</h1>
        <div>
            <a href="{{ path('app_admin_events') }}" class="btn btn-sm btn-outline-secondary">‚Üê Back to Events</a>
            <a href="{{ path('app_admin_event_edit', {id: event.id}) }}" class="btn btn-sm btn-primary">Edit Event</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Event Details</h6>
                            <p><strong>Date:</strong> {{ event.startAt ? event.startAt.format('F j, Y g:i A') : 'No date set' }}</p>
                            {% if event.endAt %}<p><strong>End:</strong> {{ event.endAt.format('F j, Y g:i A') }}</p>{% endif %}
                            <p><strong>Location:</strong> {{ event.location ?: 'No location set' }}</p>
                            <p><strong>Status:</strong> 
                                {% if event.published %}
                                    <span class="badge bg-success">Published</span>
                                {% else %}
                                    <span class="badge bg-secondary">Draft</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Registration Statistics</h6>
                            <p><strong>Total Registrations:</strong> {{ rsvpCount }}</p>
                            <p><strong>Total Guests:</strong> 
                                {% set totalGuests = 0 %}
                                {% for rsvp in rsvps %}
                                    {% set totalGuests = totalGuests + rsvp.guests %}
                                {% endfor %}
                                {{ totalGuests }}
                            </p>
                        </div>
                    </div>
                    
                    <h6 class="mt-3">Description</h6>
                    <p>{{ event.description ?: 'No description provided.' }}</p>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Registrations ({{ rsvps|length }})</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Guests</th>
                                <th>Registered</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for rsvp in rsvps %}
                            <tr>
                                <td>
                                    {% if rsvp.user.firstName and rsvp.user.lastName %}
                                        {{ rsvp.user.firstName }} {{ rsvp.user.lastName }}
                                    {% else %}
                                        {{ rsvp.user.email|split('@')[0]|title }}
                                    {% endif %}
                                </td>
                                <td>{{ rsvp.user.email }}</td>
                                <td><span class="badge bg-secondary">{{ rsvp.guests }}</span></td>
                                <td>{{ rsvp.createdAt ? rsvp.createdAt.format('M j, Y g:i A') : '-' }}</td>                                <td>
                                    <form method="post" action="{{ path('app_admin_rsvp_delete', {eventId: event.id, rsvpId: rsvp.id}) }}" class="d-inline" onsubmit="return confirm('Cancel this registration?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_rsvp_' ~ rsvp.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Cancel</button>
                                    </form>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No registrations yet</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6>Quick Actions</h6>                    <div class="d-grid gap-2">
                        <form method="post" action="{{ path('app_admin_event_toggle', {id: event.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_event_' ~ event.id) }}">
                            <button class="btn btn-{{ event.published ? 'warning' : 'success' }} btn-sm w-100" type="submit">
                                {{ event.published ? 'Unpublish Event' : 'Publish Event' }}
                            </button>
                        </form>
                        
                        <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-outline-primary btn-sm" target="_blank">
                            View Public Page
                        </a>
                        
                        <form method="post" action="{{ path('app_admin_event_delete', {id: event.id}) }}" onsubmit="return confirm('Delete this event? All registrations will be lost!');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_event_' ~ event.id) }}">
                            <button class="btn btn-outline-danger btn-sm w-100" type="submit">Delete Event</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
