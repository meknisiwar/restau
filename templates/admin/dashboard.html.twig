{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<h1 class="admin-page-title"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>

<div class="row">
    <!-- Statistics Cards -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Total Users</h6>
                        <h2 class="stat-number mb-0">{{ stats.total_users }}</h2>
                    </div>
                    <i class="bi bi-people stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Products</h6>
                        <h2 class="stat-number mb-0">{{ stats.total_products }}</h2>
                    </div>
                    <i class="bi bi-box-seam stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Orders</h6>
                        <h2 class="stat-number mb-0">{{ stats.total_orders }}</h2>
                        <small class="opacity-75">{{ stats.pending_orders }} pending</small>
                    </div>
                    <i class="bi bi-cart-check stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card text-white bg-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 text-dark opacity-75">Reservations</h6>
                        <h2 class="stat-number mb-0 text-dark">{{ stats.total_reservations }}</h2>
                        <small class="text-dark opacity-75">{{ stats.upcoming_reservations }} upcoming</small>
                    </div>
                    <i class="bi bi-calendar-check stat-icon text-dark"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Second Row Statistics -->
<div class="row">
    <div class="col-lg-6 col-md-12 mb-4">
        <div class="card stat-card text-white bg-purple h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Events</h6>
                        <h2 class="stat-number mb-0">{{ stats.total_events }}</h2>
                        <small class="opacity-75">{{ stats.upcoming_events }} upcoming</small>
                    </div>
                    <i class="bi bi-calendar-event stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-12 mb-4">
        <div class="card stat-card text-white bg-teal h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Event Registrations</h6>
                        <h2 class="stat-number mb-0">{{ stats.total_rsvps }}</h2>
                        <small class="opacity-75">Total RSVPs</small>
                    </div>
                    <i class="bi bi-people-fill stat-icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity Row -->
<div class="row mt-4">
    <!-- Recent Orders -->
    <div class="col-lg-6 mb-4">
        <div class="card admin-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
                <a href="{{ path('app_admin_orders') }}" class="btn btn-sm btn-admin-primary">View All</a>
            </div>
            <div class="card-body p-0">
                {% if recentOrders is defined and recentOrders|length > 0 %}
                    {% for order in recentOrders %}
                    <div class="activity-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>#{{ order.id }}</strong>
                            <span class="text-muted ms-2">{{ order.user.email|default('Guest') }}</span>
                            <br>
                            <small class="text-muted">{{ order.createdAt|date('M d, Y H:i') }}</small>
                        </div>
                        <div class="text-end">
                            <span class="badge badge-status-{{ order.status }}">{{ order.status|capitalize }}</span>
                            <br>
                            <strong class="text-primary">{{ order.totalAmount|number_format(0) }} DT</strong>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        No recent orders
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Upcoming Reservations -->
    <div class="col-lg-6 mb-4">
        <div class="card admin-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Upcoming Reservations</h5>
                <a href="{{ path('app_admin_reservations') }}" class="btn btn-sm btn-admin-primary">View All</a>
            </div>
            <div class="card-body p-0">
                {% if upcomingReservations is defined and upcomingReservations|length > 0 %}
                    {% for reservation in upcomingReservations %}
                    <div class="activity-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{ reservation.user.firstName }} {{ reservation.user.lastName }}</strong>
                            <span class="text-muted ms-2">{{ reservation.numberOfGuests }} guests</span>
                            <br>
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>{{ reservation.reservationDate|date('M d, Y') }}
                                <i class="bi bi-clock ms-2 me-1"></i>{{ reservation.reservationDate|date('H:i') }}
                            </small>
                        </div>
                        <span class="badge badge-status-{{ reservation.status }}">{{ reservation.status|capitalize }}</span>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                        No upcoming reservations
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Third Row Activities -->
<div class="row mt-4">
    <!-- Recent Event Registrations -->
    <div class="col-lg-6 mb-4">
        <div class="card admin-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-plus me-2"></i>Recent Event Registrations</h5>
                <a href="{{ path('app_admin_events') }}" class="btn btn-sm btn-admin-primary">View All</a>
            </div>
            <div class="card-body p-0">
                {% if recentRsvps is defined and recentRsvps|length > 0 %}
                    {% for rsvp in recentRsvps %}
                    <div class="activity-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>
                                {% if rsvp.user.firstName and rsvp.user.lastName %}
                                    {{ rsvp.user.firstName }} {{ rsvp.user.lastName }}
                                {% else %}
                                    {{ rsvp.user.email|split('@')[0]|title }}
                                {% endif %}
                            </strong>
                            <br>
                            <small class="text-muted">
                                <i class="bi bi-calendar-event me-1"></i>{{ rsvp.event.title }}
                                <br>
                                <i class="bi bi-people ms-0 me-1"></i>{{ rsvp.guests }} guest{{ rsvp.guests > 1 ? 's' : '' }}
                                <i class="bi bi-clock ms-2 me-1"></i>{{ rsvp.createdAt|date('M d, H:i') }}
                            </small>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-success">Registered</span>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                        No recent registrations
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Upcoming Events -->
    <div class="col-lg-6 mb-4">
        <div class="card admin-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Upcoming Events</h5>
                <a href="{{ path('app_admin_events') }}" class="btn btn-sm btn-admin-primary">View All</a>
            </div>
            <div class="card-body p-0">
                {% if upcomingEvents is defined and upcomingEvents|length > 0 %}
                    {% for event in upcomingEvents %}
                    <div class="activity-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{ event.title }}</strong>
                            <br>
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>{{ event.startAt|date('M d, Y H:i') }}
                                {% if event.location %}<br><i class="bi bi-geo-alt me-1"></i>{{ event.location }}{% endif %}
                                <br>
                                <i class="bi bi-people me-1"></i>{{ event.rsvps|length }} registration{{ event.rsvps|length != 1 ? 's' : '' }}
                            </small>
                        </div>
                        <div class="text-end">
                            {% if event.published %}
                                <span class="badge bg-success">Published</span>
                            {% else %}
                                <span class="badge bg-secondary">Draft</span>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                        No upcoming events
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

