<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Restaurant Platform{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üçΩÔ∏è</text></svg>">
        <meta name="description" content="Order food online, make reservations and manage your orders with our professional restaurant platform.">
        <meta name="theme-color" content="#0077a3">

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/site.css') }}">
        {% endblock %}
    </head>
    <body class="theme-aqua">
        <!-- Slim top info bar (hours / phone / badge) -->
        <div class="topbar slim-topbar py-1">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="small text-muted">Open today <strong>09:00 ‚Äî 23:00</strong></div>
                <div class="small">
                    <a href="tel:+1234567890" class="me-3 topbar-phone"><i class="bi bi-telephone"></i> +1 234 567 890</a>
                    <span class="badge badge-sea">Free delivery over 30 DT</span>
                </div>
            </div>
        </div>

        <!-- Navigation (logo left, centered nav, right CTAs) -->
        <nav class="navbar navbar-expand-lg sticky-top site-navbar py-2" role="navigation" aria-label="Main navigation" id="mainNavbar">
            <div class="container align-items-center d-flex">
                <div class="d-flex align-items-center site-navbar-left">
                    <a class="navbar-brand d-flex align-items-center me-3" href="{{ path('app_home') }}">
                        <img src="{{ asset('images/food_bg.jpg') }}" alt="logo" class="me-2">
                        <div class="d-none d-md-block">
                            <div class="fw-bold">Restaurant Platform</div>
                            <div class="small text-muted">Fresh ‚Ä¢ Local ‚Ä¢ Fast</div>
                        </div>
                    </a>
                    <button class="navbar-toggler ms-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_product_index') }}">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_event_index') }}">Events</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_reservation_index') }}">Reservations</a></li>
                    </ul>
                </div>

                <div class="ms-auto d-flex align-items-center gap-2 site-navbar-right">
                    <form class="d-flex navbar-search me-2" role="search" method="get" action="{{ path('app_product_index') }}">
                        <input class="form-control form-control-sm" type="search" placeholder="Search dishes, e.g. Margherita, burger..." aria-label="Search" name="q" value="{{ app.request.get('q') }}">
                        <button class="btn btn-search btn-sm ms-2" type="submit">Find</button>
                    </form>

                    <a class="btn btn-ghost position-relative" href="{{ path('app_cart_index') }}" aria-label="Cart">
                        <i class="bi bi-cart fs-5"></i>
                        <span class="badge cart-badge">{{ cartCount|default(0) }}</span>
                    </a>                    {% if is_granted('ROLE_USER') %}
                    <div class="d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle user-profile-btn d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar me-2">
                                    <i class="bi bi-person-fill"></i>
                                </div>                                <div class="user-info d-none d-md-block text-start">
                                    <div class="user-name">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            Admin
                                        {% else %}
                                            {% if app.user %}
                                                {% if app.user.firstName and app.user.lastName %}
                                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                                {% elseif app.user.firstName %}
                                                    {{ app.user.firstName }}
                                                {% else %}
                                                    {{ app.user.email|split('@')[0]|title }}
                                                {% endif %}
                                            {% else %}
                                                Account
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" aria-labelledby="userDropdown">
                                {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item admin-item" href="{{ path('app_admin_dashboard') }}">
                                        <i class="bi bi-speedometer2 me-3"></i>
                                        <span>Admin Dashboard</span>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                {% endif %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_order_index') }}">
                                        <i class="bi bi-bag-check me-3"></i>
                                        <span>My Orders</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_reservation_index') }}">
                                        <i class="bi bi-calendar-check me-3"></i>
                                        <span>Reservations</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_user_events') }}">
                                        <i class="bi bi-calendar-event me-3"></i>
                                        <span>My Events</span>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item logout-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right me-3"></i>
                                        <span>Sign Out</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {% else %}
                    <a class="btn btn-sm btn-outline-light" href="{{ path('app_login') }}">Login</a>
                    <a class="btn btn-primary btn-sm ms-2" href="{{ path('app_register') }}">Sign up</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <!-- Flash Messages -->
        <div class="container mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <!-- Main Content -->
        {% block body %}{% endblock %}

        <!-- Sticky Reserve CTA (mobile & desktop) -->
        <a href="{{ path('app_reservation_new') }}" class="sticky-reserve d-flex align-items-center justify-content-center" aria-label="Reserve a table">
            <i class="bi bi-calendar-event-fill fs-4 me-2"></i>
            <span class="d-none d-md-inline">Reserve a table</span>
        </a>

        <!-- Floating phone action for mobile -->
        <a href="tel:+1234567890" class="floating-call d-flex align-items-center justify-content-center" aria-label="Call">
            <i class="bi bi-telephone-fill"></i>
        </a>

        <!-- Footer -->
        <footer class="site-footer mt-5 py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Restaurant Platform</h5>
                        <p class="small text-muted">Fresh food, delivered fast. Follow us on social media for offers and updates.</p>
                        <div class="d-flex gap-2">
                            <a class="text-muted" href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                            <a class="text-muted" href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                            <a class="text-muted" href="#" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        </div>                    </div>
                    <div class="col-md-6">
                        <h6>About</h6>
                        <p class="small text-muted">Quality ingredients, exceptional service, and memorable dining experiences.</p>
                    </div>
                </div>
                <hr class="bg-secondary mt-4">
                <div class="text-center small">
                    &copy; {{ 'now'|date('Y') }} Restaurant Platform. All rights reserved.
                </div>
            </div>
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script>
                // Initialize Bootstrap components when DOM is loaded
                document.addEventListener('DOMContentLoaded', function() {
                    // Initialize all Bootstrap dropdowns
                    const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
                    const dropdownList = [...dropdownElementList].map(dropdownToggleEl => new bootstrap.Dropdown(dropdownToggleEl));
                    
                    // Force re-initialize if needed
                    setTimeout(function() {
                        dropdownElementList.forEach(function(dropdown) {
                            if (!dropdown._dropdown) {
                                new bootstrap.Dropdown(dropdown);
                            }
                        });
                    }, 100);
                });

                // Add navbar shadow on scroll
                (function(){
                    const nav = document.getElementById('mainNavbar');
                    if (!nav) return;
                    function onScroll(){
                        if (window.scrollY > 10) nav.classList.add('nav-elevated'); 
                        else nav.classList.remove('nav-elevated');
                    }
                    document.addEventListener('scroll', onScroll, {passive:true});
                    onScroll();
                })();

                // Scroll reveal animation
                (function(){
                    const items = Array.from(document.querySelectorAll('.section-reveal'));
                    if (!items.length) return;
                    function check(){
                        const top = window.innerHeight * 0.9;
                        items.forEach(function(el){
                            const r = el.getBoundingClientRect();
                            if (r.top < top) el.classList.add('visible');
                        });
                    }
                    document.addEventListener('scroll', check, {passive:true});
                    window.addEventListener('load', check);
                    check();
                })();

                // Hide floating phone on large screens
                (function(){
                    const phone = document.querySelector('.floating-call');
                    if (!phone) return;
                    function update(){
                        if (window.innerWidth > 992) {
                            phone.style.display = 'none';
                        } else {
                            phone.style.display = 'flex';
                        }
                    }
                    window.addEventListener('resize', update);
                    update();
                })();
            </script>
        {% endblock %}
    </body>
</html>
