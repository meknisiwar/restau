{% extends 'base.html.twig' %}

{% block title %}Reservation #{{ reservation.id }}{% endblock %}

{% block body %}
<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_reservation_index') }}">My Reservations</a></li>
            <li class="breadcrumb-item active">Reservation #{{ reservation.id }}</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Reservation #{{ reservation.id }}</h3>
            <span class="badge 
                {% if reservation.status == 'pending' %}bg-warning
                {% elseif reservation.status == 'confirmed' %}bg-success
                {% elseif reservation.status == 'cancelled' %}bg-danger
                {% elseif reservation.status == 'completed' %}bg-secondary
                {% endif %} fs-5">
                {{ reservation.status|upper }}
            </span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Reservation Details</h5>
                    <p><strong>Date:</strong> {{ reservation.reservationDate|date('F d, Y') }}</p>
                    <p><strong>Time:</strong> {{ reservation.reservationDate|date('H:i') }}</p>
                    <p><strong>Number of Guests:</strong> {{ reservation.numberOfGuests }}</p>
                    {% if reservation.tableNumber %}
                    <p><strong>Table Number:</strong> {{ reservation.tableNumber }}</p>
                    {% endif %}
                    <p><strong>Created:</strong> {{ reservation.createdAt|date('F d, Y H:i') }}</p>
                </div>
                <div class="col-md-6">
                    {% if reservation.specialRequests %}
                    <h5>Special Requests</h5>
                    <p>{{ reservation.specialRequests }}</p>
                    {% endif %}

                    {% if reservation.status == 'confirmed' %}
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> Your reservation has been confirmed!
                    </div>
                    {% elseif reservation.status == 'pending' %}
                    <div class="alert alert-warning">
                        <i class="bi bi-clock"></i> Your reservation is pending confirmation.
                    </div>
                    {% elseif reservation.status == 'cancelled' %}
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i> This reservation has been cancelled.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reservations
        </a>
        {% if reservation.status in ['pending', 'confirmed'] %}
        <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this reservation?')">
                <i class="bi bi-x-circle"></i> Cancel Reservation
            </button>
        </form>
        {% endif %}
    </div>
</div>
{% endblock %}

