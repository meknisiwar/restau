{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_order_index') }}">My Orders</a></li>
            <li class="breadcrumb-item active">Order #{{ order.id }}</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Order #{{ order.id }}</h3>
            <span class="badge 
                {% if order.status == 'pending' %}bg-warning
                {% elseif order.status == 'confirmed' %}bg-info
                {% elseif order.status == 'preparing' %}bg-primary
                {% elseif order.status == 'ready' %}bg-success
                {% elseif order.status == 'delivered' %}bg-success
                {% elseif order.status == 'cancelled' %}bg-danger
                {% endif %} fs-5">
                {{ order.status|upper }}
            </span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Order Details</h5>
                    <p><strong>Order Date:</strong> {{ order.createdAt|date('F d, Y H:i') }}</p>
                    <p><strong>Delivery Address:</strong><br>{{ order.deliveryAddress }}</p>
                    <p><strong>Phone:</strong> {{ order.phone }}</p>
                    {% if order.notes %}
                    <p><strong>Notes:</strong><br>{{ order.notes }}</p>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h5>Order Items</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.orderItems %}
                            <tr>
                                <td>{{ item.productName }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>${{ item.price }}</td>
                                <td>${{ item.subtotal }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Total:</th>
                                <th class="text-success">${{ order.totalAmount }}</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>
</div>
{% endblock %}

