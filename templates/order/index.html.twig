{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4"><i class="bi bi-bag-check"></i> My Orders</h1>

    {% if orders is not empty %}
    <div class="row">
        {% for order in orders %}
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>
                        <strong>Order #{{ order.id }}</strong> - 
                        {{ order.createdAt|date('M d, Y H:i') }}
                    </span>
                    <span class="badge 
                        {% if order.status == 'pending' %}bg-warning
                        {% elseif order.status == 'confirmed' %}bg-info
                        {% elseif order.status == 'preparing' %}bg-primary
                        {% elseif order.status == 'ready' %}bg-success
                        {% elseif order.status == 'delivered' %}bg-success
                        {% elseif order.status == 'cancelled' %}bg-danger
                        {% endif %}">
                        {{ order.status|upper }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6>Items:</h6>
                            <ul class="list-unstyled">
                                {% for item in order.orderItems %}
                                <li>{{ item.quantity }}x {{ item.productName }} - {{ item.price|number_format(0) }} DT</li>
                                {% endfor %}
                            </ul>
                            <p class="mb-1"><strong>Delivery Address:</strong> {{ order.deliveryAddress }}</p>
                            <p class="mb-1"><strong>Phone:</strong> {{ order.phone }}</p>
                            {% if order.notes %}
                            <p class="mb-0"><strong>Notes:</strong> {{ order.notes }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-end">
                            <h4 class="text-success">Total: {{ order.totalAmount|number_format(0) }} DT</h4>
                            <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-outline-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-info">
        <h4><i class="bi bi-info-circle"></i> No orders yet</h4>
        <p>You haven't placed any orders yet. Start shopping!</p>
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
            <i class="bi bi-shop"></i> Browse Products
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}

