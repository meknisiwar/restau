{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4"><i class="bi bi-credit-card"></i> Checkout</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Delivery Information</h5>
                </div>
                <div class="card-body">
                    <form method="post" id="checkout-form">
                        {{ csrf_token('order_checkout') }}
                        <input type="hidden" name="_token" value="{{ csrf_token('order_checkout') }}">
                        
                        <div class="mb-3">
                            <label for="delivery_address" class="form-label">Delivery Address</label>
                            <textarea name="delivery_address" id="delivery_address" class="form-control" rows="3" required maxlength="255">{{ app.user.address }}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" name="phone" id="phone" class="form-control" value="{{ app.user.phone }}" required pattern="[\+]?[\d\s\-\(\)]{8,20}">
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">Order Notes (Optional)</label>
                            <textarea name="notes" id="notes" class="form-control" rows="2" placeholder="Any special instructions..." maxlength="500"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="coupon_code" class="form-label">Promotion Code</label>
                            <div class="input-group">
                                <input type="text" name="coupon_code" id="coupon_code" class="form-control" placeholder="Have a promo code?">
                                <button type="button" class="btn btn-outline-secondary" id="apply-coupon">Apply</button>
                            </div>
                            <div id="coupon-feedback" class="form-text text-success d-none"></div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-check-circle"></i> Place Order
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Order Summary</h5>
                    <small class="text-muted">You have {{ cart.cartItems|length }} items</small>
                </div>
                <div class="card-body">
                    <h6>Items:</h6>
                    <ul class="list-unstyled">
                        {% for item in cart.cartItems %}
                        <li class="d-flex justify-content-between mb-2">
                            <span>{{ item.quantity }}x {{ item.product.name }}</span>
                            <span>{{ item.subtotal|number_format(0) }} DT</span>
                        </li>
                        {% endfor %}
                    </ul>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>{{ cart.total|number_format(0) }} DT</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Discount</span>
                        <span id="discount-amount">0.00 DT</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total</strong>
                        <strong class="text-success" id="grand-total">{{ cart.total|number_format(0) }} DT</strong>
                    </div>

                    <div class="mt-3">
                        <h6>Loyalty</h6>
                        <p class="small text-muted">You have <strong>{{ app.user.getLoyaltyPoints()|default(0) }}</strong> points. (1 point = 0.1 DT)</p>
                        <button class="btn btn-sm btn-outline-primary" id="use-points">Use Points</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Placeholder coupon apply behavior (AJAX endpoint should validate)
        document.getElementById('apply-coupon')?.addEventListener('click', function(){
            const code = document.getElementById('coupon_code').value.trim();
            const feedback = document.getElementById('coupon-feedback');
            if (!code) { feedback.classList.remove('d-none'); feedback.classList.add('text-danger'); feedback.textContent = 'Enter a code'; return; }
            // Simulate validation
            if (code.toLowerCase() === 'DISCOUNT10'.toLowerCase()) {
                feedback.classList.remove('d-none'); feedback.classList.remove('text-danger'); feedback.classList.add('text-success'); feedback.textContent = 'Coupon applied: 10% off';
                const subtotal = parseFloat('{{ cart.total }}');
                const discount = Math.round(subtotal * 0.10);
                document.getElementById('discount-amount').textContent = discount + ' DT';
                document.getElementById('grand-total').textContent = (subtotal - discount) + ' DT';
            } else {
                feedback.classList.remove('d-none'); feedback.classList.remove('text-success'); feedback.classList.add('text-danger'); feedback.textContent = 'Invalid code';
            }
        });

        document.getElementById('use-points')?.addEventListener('click', function(){
            // simplistic conversion
            const points = parseInt('{{ app.user.getLoyaltyPoints()|default(0) }}');
            if (points <= 0) { alert('No loyalty points available'); return; }
            const subtotal = parseFloat('{{ cart.total }}');
            const discount = Math.min(Math.round(points * 0.1), subtotal);
            document.getElementById('discount-amount').textContent = discount + ' DT';
            document.getElementById('grand-total').textContent = (subtotal - discount) + ' DT';
            alert('Applied points for ' + discount + ' DT discount');
        });
    </script>
{% endblock %}

