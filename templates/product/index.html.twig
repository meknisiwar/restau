{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4"><i class="bi bi-shop"></i> Our Menu</h1>

    <!-- Category Filter -->
    {% if categories is not empty %}
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary {% if not selectedCategory %}active{% endif %}">
                All Products
            </a>
            {% for category in categories %}
            <a href="{{ path('app_product_index', {category: category.id}) }}"
               class="btn btn-outline-primary {% if selectedCategory == category.id %}active{% endif %}">
                {{ category.name }}
            </a>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Products Grid -->
    {% if products is not empty %}
    <div class="row">
        {% for product in products %}
        <div class="col-md-4 mb-4">
            <div class="card h-100 product-card shadow-sm">
                {% set fallbackFilename = (product.name|lower|replace({' ':'_','/':'_','-':'_'}) ) ~ '.jpg' %}
                {% set imageUrl = product.image is not empty ? product.image : asset('images/' ~ fallbackFilename) %}

                <img src="{{ imageUrl }}" srcset="{{ imageUrl }} 1x, {{ imageUrl }} 2x" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;" onerror="this.onerror=null;this.src='{{ asset('images/food_bg.jpg') }}';">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text flex-grow-1">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                    <div class="mt-auto">
                        <p class="card-text mb-2">
                            <strong class="text-success">{{ product.price|number_format(0) }} DT</strong>
                            {% if not product.available %}
                                <span class="badge bg-danger">Out of Stock</span>
                            {% endif %}
                        </p>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary flex-grow-1">
                                View Details
                            </a>
                            {% if product.available and is_granted('ROLE_USER') %}
                            <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="flex-grow-1">
                                <input type="hidden" name="quantity" value="1">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-info">
        <h4><i class="bi bi-info-circle"></i> No products found</h4>
        <p>There are no products available in this category.</p>
    </div>
    {% endif %}
</div>
{% endblock %}

