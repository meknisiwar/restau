{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4"><i class="bi bi-cart"></i> Shopping Cart</h1>

    {% if cart and cart.cartItems is not empty %}
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cart.cartItems %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_product_show', {id: item.product.id}) }}">
                                            {{ item.product.name }}
                                        </a>
                                    </td>
                                    <td>{{ item.price|number_format(0) }} DT</td>
                                    <td>
                                        <form method="post" action="{{ path('app_cart_update', {id: item.id}) }}" class="d-inline">
                                            <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control form-control-sm" style="width: 80px; display: inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                        </form>
                                    </td>
                                    <td>{{ item.subtotal|number_format(0) }} DT</td>
                                    <td>
                                        <form method="post" action="{{ path('app_cart_remove', {id: item.id}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Remove this item?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items:</span>
                            <span>{{ cart.totalItems }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>{{ cart.total|number_format(0) }} DT</strong>
                        </div>
                        <a href="{{ path('app_order_checkout') }}" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-check-circle"></i> Proceed to Checkout
                        </a>
                        <form method="post" action="{{ path('app_cart_clear') }}">
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Clear entire cart?')">
                                <i class="bi bi-trash"></i> Clear Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h4><i class="bi bi-info-circle"></i> Your cart is empty</h4>
            <p>Start shopping to add items to your cart!</p>
            <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                <i class="bi bi-shop"></i> Browse Products
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

