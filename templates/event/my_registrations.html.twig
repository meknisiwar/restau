{% extends 'base.html.twig' %}

{% block title %}My Event Registrations{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Event Registrations</h1>
        <a href="{{ path('app_event_index') }}" class="btn btn-sm btn-primary">Browse Events</a>
    </div>

    <div class="row">
        {% for rsvp in rsvps %}
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="{{ rsvp.event.image ?: asset('images/food_bg.jpg') }}" class="img-fluid rounded-start" style="height:150px;object-fit:cover;" alt="{{ rsvp.event.title }}">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ rsvp.event.title }}</h5>
                            <p class="small text-muted mb-1">
                                {{ rsvp.event.startAt ? rsvp.event.startAt.format('F j, Y g:i A') : 'Date TBD' }}
                                {% if rsvp.event.location %} â€¢ {{ rsvp.event.location }}{% endif %}
                            </p>
                            <p class="small mb-2">{{ rsvp.event.description|slice(0, 100) }}{% if rsvp.event.description|length > 100 %}...{% endif %}</p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="small">
                                    <strong>Guests:</strong> {{ rsvp.guests }}
                                    <br>
                                    <span class="text-muted">Registered: {{ rsvp.createdAt ? rsvp.createdAt.format('M j, Y') : '-' }}</span>
                                </div>                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_event_show', {id: rsvp.event.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                                    <form method="post" action="{{ path('app_event_rsvp_cancel', {id: rsvp.event.id}) }}" class="d-inline" onsubmit="return confirm('Cancel your registration for this event?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('cancel_rsvp_' ~ rsvp.event.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Cancel</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-calendar-event fs-1 text-muted mb-3"></i>
                    <h5>No Event Registrations</h5>
                    <p class="text-muted mb-3">You haven't registered for any events yet.</p>
                    <a href="{{ path('app_event_index') }}" class="btn btn-primary">Browse Upcoming Events</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
