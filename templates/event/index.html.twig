{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Upcoming Events</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_event_new') }}" class="btn btn-sm btn-outline-light">Create event</a>
        {% endif %}
    </div>

    <div class="row g-4">
        {% for e in events %}
        <div class="col-md-6">
            <div class="card h-100">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="{{ e.image ?: asset('images/food_bg.jpg') }}" class="img-fluid rounded-start" style="height:120px;object-fit:cover;" alt="{{ e.title }}">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ e.title }}</h5>
                            <p class="small text-muted mb-1">{{ e.startAt ? e.startAt.format('Y-m-d H:i') : '' }}{% if e.location %} â€¢ {{ e.location }}{% endif %}</p>
                            <p class="small text-truncate">{{ e.description }}</p>
                            <a href="{{ path('app_event_show',{id:e.id}) }}" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12 small text-muted">No upcoming events at the moment.</div>
        {% endfor %}
    </div>
</div>
{% endblock %}
